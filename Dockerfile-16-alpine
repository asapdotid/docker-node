FROM node:16-alpine

# Metadata params
ARG BUILD_DATE
ARG VCS_REF
ARG LANG="C.UTF-8"
ARG TIMEZONE=Asia/Jakarta

# Metadata
LABEL maintainer="Asapdotid <asapdotid@gmail.com>" \
      org.label-schema.url="https://gitlab.com/asap-labs/docker-nodejs/-/blob/main/README.md" \
      org.label-schema.build-date=${BUILD_DATE} \
      org.label-schema.version=16-alpine \
      org.label-schema.vcs-url="https://gitlab.com/asap-labs/docker-nodejs.git" \
      org.label-schema.vcs-ref=${VCS_REF} \
      org.label-schema.docker.dockerfile="/Dockerfile-16-alpine" \
      org.label-schema.description="NodeJS on alpine docker image" \
      org.label-schema.schema-version="1.0"

RUN apk --update --no-cache add git make automake g++ curl autoconf libtool libpng-dev cairo-dev jpeg-dev pango-dev giflib-dev nasm vips tzdata >/dev/null

ENV TZ=${TIMEZONE}
RUN cp /usr/share/zoneinfo/$TZ /etc/localtime

RUN export GIT_SSL_NO_VERIFY=1 \
      && git config --global http.sslVerify false \
      && npm config set unsafe-perm true \
      && npm i -g npm --prefix /usr/local \
      && npm i -g node-gyp --prefix /usr/local \
      && yarn global add rimraf@latest --prefix /usr/local
RUN curl -sf https://gobinaries.com/tj/node-prune | sh

RUN npm cache clean --force --loglevel=error \
      && rm -rf /var/cache/apk/* \
      && rm -rf /tmp/*

WORKDIR /app

# default command
CMD [ "node" ]
